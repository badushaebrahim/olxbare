<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F8"
    android:backgroundTint="#EFEEEB">

    <ScrollView
        android:layout_width="405dp"
        android:layout_height="694dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:background="#FFFCFC"
                android:backgroundTint="#DFDBDB"
                android:fontFamily="monospace"
                android:padding="20dp"
                android:shadowColor="#CAC2C2"
                android:shadowDx="45"
                android:shadowDy="150"

                android:shadowRadius="25"

                android:text="Register"
                android:textColor="#040303"
                android:textSize="28sp" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="272dp"
                android:layout_height="48dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="#191313"
                android:textColorHint="#777272" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="269dp"
                android:layout_height="52dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textColor="#131010"
                android:textColorHint="#777272" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="266dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#191212"
                android:textColorHint="#777272" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="266dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#271818"
                android:textColorHint="#777272" />

            <EditText
                android:id="@+id/Number"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="#201515"
                android:textColorHint="#777272" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="285dp"
                android:layout_height="112dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:textColor="#1B0E0E"
                android:textColorHint="#777272" />

            <Button
                android:id="@+id/button"
                android:layout_width="182dp"
                android:layout_height="49dp"
                android:layout_marginTop="48dp"
                android:onClick="bypas"
                android:shadowColor="#BF2929"
                android:shadowRadius="145"
                android:text="Register"
                android:textColorLink="#710505"
                app:cornerRadius="25dp"
                app:rippleColor="#10F6EF" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button2"
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:text="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>